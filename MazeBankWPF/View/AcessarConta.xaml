<Window x:Class="View.AcessarConta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MazeBank - Acessar Conta" Height="450" Width="800">
    <Grid>
        <Image Margin="621,312,10,10" Source="imagens\Maze_Bank_Logo.png" Stretch="Fill"/>
        <Label x:Name="label" Content="Número da Conta:" HorizontalAlignment="Left" Margin="233,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Conta" HorizontalAlignment="Left" Height="26" Margin="345,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147"/>
        <Label x:Name="label1" Content="Agência:" HorizontalAlignment="Left" Margin="285,189,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.418,0.538"/>
        <TextBox x:Name="txt_Agencia" HorizontalAlignment="Left" Height="26" Margin="345,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147"/>
        <Label x:Name="label2" Content="Senha:" HorizontalAlignment="Left" Margin="285,229,0,0" VerticalAlignment="Top" Width="55"/>
        <TextBox x:Name="txt_Senha" HorizontalAlignment="Left" Height="26" Margin="345,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147"/>
        <Button x:Name="btnAcessarConta" Content="Acessar Conta" HorizontalAlignment="Left" Margin="372,297,0,0" VerticalAlignment="Top" Width="84" Click="btnAcessarConta_Click"/>
        <Label Content="Minha Conta" HorizontalAlignment="Center" Margin="274,42,274,313" VerticalAlignment="Center" FontSize="36" Width="244" Height="64" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
